# Copy to `.env.production` on the server and fill values.
# Keep `DJANGO_DEBUG=False` in production and use a secure `DJANGO_SECRET_KEY`.
DJANGO_SECRET_KEY=replace-me-with-a-long-random-secret
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=example.com

# Database (example for compose where db service name is `db`)
DATABASE_URL=postgres://quizuser:quizpass@db:5432/quizdb
POSTGRES_USER=quizuser
POSTGRES_PASSWORD=quizpass
POSTGRES_DB=quizdb

# Redis for channels
REDIS_URL=redis://redis:6379/0

# Image/tag to run (use your pushed image)
IMAGE=nailvolk/quiz_platform:latest

# Web port exposed on host (nginx usually proxies to 8000)
WEB_PORT=8000
